<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="THJ_Inventory_Reader.MainPage"
             Title="EverQuest Inventory Reader"
             BackgroundColor="#1a1a1a">

    <!-- Main EverQuest Inventory Window -->
    <Border BackgroundColor="#3a3a3a" 
            Stroke="#6B4423" 
            StrokeThickness="2"
            Margin="20"
            MaximumWidthRequest="640"
            MaximumHeightRequest="480"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        
        <!-- Window Content Grid -->
        <Grid BackgroundColor="#2a2a2a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>  <!-- Character Paperdoll -->
                <ColumnDefinition Width="200"/>  <!-- Stats Panel -->
                <ColumnDefinition Width="240"/>  <!-- Inventory Grid -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Character Paperdoll & Equipment -->
            <Border Grid.Column="0" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Equipment Slots -->
                    </Grid.RowDefinitions>
                    
                    <!-- Character Title -->
                    <Label Grid.Row="0" 
                           Text="Equipment" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Equipment Slots Grid -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Head Slot -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="HeadSlot" 
                                   Text="HEAD" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Left Ear -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="EarSlot1" 
                                   Text="EAR" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Face -->
                        <Border Grid.Row="1" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="FaceSlot" 
                                   Text="FACE" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Right Ear -->
                        <Border Grid.Row="1" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="EarSlot2" 
                                   Text="EAR" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Neck -->
                        <Border Grid.Row="2" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="NeckSlot" 
                                   Text="NECK" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Shoulders -->
                        <Border Grid.Row="3" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="ShoulderSlot" 
                                   Text="SHLD" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Arms -->
                        <Border Grid.Row="4" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="ArmsSlot" 
                                   Text="ARMS" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Back -->
                        <Border Grid.Row="5" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="BackSlot" 
                                   Text="BACK" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Chest -->
                        <Border Grid.Row="5" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="ChestSlot" 
                                   Text="CHEST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Right Wrist -->
                        <Border Grid.Row="5" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="WristSlot2" 
                                   Text="WRIST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Waist -->
                        <Border Grid.Row="6" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="WaistSlot" 
                                   Text="WAIST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Left Wrist -->
                        <Border Grid.Row="7" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="WristSlot1" 
                                   Text="WRIST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Legs -->
                        <Border Grid.Row="7" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="LegsSlot" 
                                   Text="LEGS" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Hands -->
                        <Border Grid.Row="7" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="HandsSlot" 
                                   Text="HANDS" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Feet -->
                        <Border Grid.Row="8" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="FeetSlot" 
                                   Text="FEET" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Middle Panel - Character Stats -->
            <Border Grid.Column="1" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Stats -->
                    </Grid.RowDefinitions>
                    
                    <!-- Stats Title -->
                    <Label Grid.Row="0" 
                           Text="Character Stats" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Stats Content -->
                    <ScrollView Grid.Row="1" Margin="5">
                        <StackLayout Spacing="8">
                            <!-- HP/MP -->
                            <Label Text="Hit Points: 2847/2847" TextColor="#FFD700" FontSize="11"/>
                            <Label Text="Mana Points: 3204/3204" TextColor="#4488FF" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Primary Stats -->
                            <Label Text="Strength: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Stamina: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Agility: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Dexterity: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Intelligence: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Wisdom: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Charisma: 255" TextColor="#CCCCCC" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Combat Stats -->
                            <Label Text="Attack: 1247" TextColor="#FF8888" FontSize="11"/>
                            <Label Text="AC: 1842" TextColor="#88FF88" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Resistances -->
                            <Label Text="Magic: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Fire: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Cold: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Disease: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Poison: 255" TextColor="#CCCCCC" FontSize="10"/>
                        </StackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
            <!-- Right Panel - Weapons & Rings -->
            <Border Grid.Column="2" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="100"/>  <!-- Weapon Slots -->
                        <RowDefinition Height="80"/>   <!-- Ring & Charm Slots -->
                        <RowDefinition Height="*"/>    <!-- File Info -->
                    </Grid.RowDefinitions>
                    
                    <!-- Panel Title -->
                    <Label Grid.Row="0" 
                           Text="Weapons & Items" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Weapon Slots -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Primary Weapon -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="PrimarySlot" 
                                   Text="PRI" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Secondary Weapon -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="SecondarySlot" 
                                   Text="SEC" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Range Weapon -->
                        <Border Grid.Row="0" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="RangeSlot" 
                                   Text="RNG" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Ammo -->
                        <Border Grid.Row="1" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="AmmoSlot" 
                                   Text="AMMO" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- Ring & Charm Slots -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Ring -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="RingSlot1" 
                                   Text="RING" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Right Ring -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="RingSlot2" 
                                   Text="RING" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Charm -->
                        <Border Grid.Row="0" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="2">
                            <Label x:Name="CharmSlot" 
                                   Text="CHARM" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- File Info -->
                    <StackLayout Grid.Row="3" Margin="10">
                        <Label x:Name="FileNameLabel" 
                               Text="Default EverQuest Character" 
                               TextColor="#FFD700"
                               FontSize="10"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,10"/>
                    </StackLayout>
                </Grid>
            </Border>
        </Grid>
    </Border>

    <!-- Hidden views for compatibility with existing code -->
    <StackLayout x:Name="MainContent" IsVisible="False"/>
    <StackLayout x:Name="InventoryView" IsVisible="True" InputTransparent="True"/>
    <StackLayout x:Name="FileMenu" IsVisible="False"/>

</ContentPage>
