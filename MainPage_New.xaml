<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="THJ_Inventory_Reader.MainPage"
             Title="EverQuest Inventory Reader"
             BackgroundColor="#1a1a1a">

    <!-- Main EverQuest Inventory Window -->
    <Border BackgroundColor="#3a3a3a" 
            Stroke="#6B4423" 
            StrokeThickness="2"
            Margin="20"
            MaximumWidthRequest="640"
            MaximumHeightRequest="480"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        
        <!-- Window Content Grid -->
        <Grid BackgroundColor="#2a2a2a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>  <!-- Character Paperdoll -->
                <ColumnDefinition Width="200"/>  <!-- Stats Panel -->
                <ColumnDefinition Width="240"/>  <!-- Inventory Grid -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Character Paperdoll & Equipment -->
            <Border Grid.Column="0" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Equipment Slots -->
                    </Grid.RowDefinitions>
                    
                    <!-- Character Title -->
                    <Label Grid.Row="0" 
                           Text="Equipment" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Equipment Slots Grid -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Head Slot -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Head" 
                                   Text="Head" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Left Ear -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="LeftEar" 
                                   Text="L.Ear" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Face -->
                        <Border Grid.Row="1" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Face" 
                                   Text="Face" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Right Ear -->
                        <Border Grid.Row="1" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="RightEar" 
                                   Text="R.Ear" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Neck -->
                        <Border Grid.Row="2" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Neck" 
                                   Text="Neck" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Shoulders -->
                        <Border Grid.Row="3" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Shoulders" 
                                   Text="Shldr" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Arms -->
                        <Border Grid.Row="4" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Arms" 
                                   Text="Arms" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Back -->
                        <Border Grid.Row="5" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Back" 
                                   Text="Back" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Chest -->
                        <Border Grid.Row="5" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Chest" 
                                   Text="Chest" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Right Wrist -->
                        <Border Grid.Row="5" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="RightWrist" 
                                   Text="R.Wrist" 
                                   TextColor="#CCCCCC"
                                   FontSize="8"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Waist -->
                        <Border Grid.Row="6" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Waist" 
                                   Text="Waist" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Left Wrist -->
                        <Border Grid.Row="7" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="LeftWrist" 
                                   Text="L.Wrist" 
                                   TextColor="#CCCCCC"
                                   FontSize="8"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Legs -->
                        <Border Grid.Row="7" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Legs" 
                                   Text="Legs" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Hands -->
                        <Border Grid.Row="7" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Hands" 
                                   Text="Hands" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Feet -->
                        <Border Grid.Row="8" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="50" 
                                HeightRequest="30">
                            <Label x:Name="Feet" 
                                   Text="Feet" 
                                   TextColor="#CCCCCC"
                                   FontSize="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Middle Panel - Character Stats -->
            <Border Grid.Column="1" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Stats -->
                    </Grid.RowDefinitions>
                    
                    <!-- Stats Title -->
                    <Label Grid.Row="0" 
                           Text="Character Stats" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Stats Content -->
                    <ScrollView Grid.Row="1" Margin="5">
                        <StackLayout Spacing="8">
                            <!-- HP/MP -->
                            <Label Text="Hit Points: 2847/2847" TextColor="#FFD700" FontSize="11"/>
                            <Label Text="Mana Points: 3204/3204" TextColor="#4488FF" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Primary Stats -->
                            <Label Text="Strength: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Stamina: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Agility: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Dexterity: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Intelligence: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Wisdom: 255" TextColor="#CCCCCC" FontSize="11"/>
                            <Label Text="Charisma: 255" TextColor="#CCCCCC" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Combat Stats -->
                            <Label Text="Attack: 1247" TextColor="#FF8888" FontSize="11"/>
                            <Label Text="AC: 1842" TextColor="#88FF88" FontSize="11"/>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" Margin="0,5"/>
                            
                            <!-- Resistances -->
                            <Label Text="Magic: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Fire: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Cold: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Disease: 255" TextColor="#CCCCCC" FontSize="10"/>
                            <Label Text="Poison: 255" TextColor="#CCCCCC" FontSize="10"/>
                        </StackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
            <!-- Right Panel - Inventory Grid -->
            <Border Grid.Column="2" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="30"/>   <!-- Tabs -->
                        <RowDefinition Height="*"/>    <!-- Inventory Grid -->
                    </Grid.RowDefinitions>
                    
                    <!-- Inventory Title -->
                    <Label Grid.Row="0" 
                           Text="Inventory" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <!-- Inventory Tabs -->
                    <StackLayout Grid.Row="1" 
                                 Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Spacing="5">
                        <Border BackgroundColor="#6B4423" 
                                Stroke="#FFD700" 
                                StrokeThickness="1"
                                Padding="8,4">
                            <Label Text="General" 
                                   TextColor="#FFD700" 
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Border>
                        <Border BackgroundColor="#2a2a2a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Padding="8,4">
                            <Label Text="Containers" 
                                   TextColor="#CCCCCC" 
                                   FontSize="10"/>
                        </Border>
                        <Border BackgroundColor="#2a2a2a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Padding="8,4">
                            <Label Text="Cursor" 
                                   TextColor="#CCCCCC" 
                                   FontSize="10"/>
                        </Border>
                    </StackLayout>
                    
                    <!-- Inventory Grid -->
                    <Grid Grid.Row="2" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Sample inventory slots -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                WidthRequest="30" 
                                HeightRequest="30">
                            <Label x:Name="InvSlot1" 
                                   Text=""
                                   TextColor="#CCCCCC"
                                   FontSize="8"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Add more inventory slots as needed -->
                        
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>

</ContentPage>
