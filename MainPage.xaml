<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="THJ_Inventory_Reader.MainPage"
             Title="THJ Inventory Reader"
             BackgroundColor="#1a1a1a">

    <!-- Main EverQuest-style Inventory Window -->
    <Border BackgroundColor="#2a2a2a" 
            Stroke="#6B4423" 
            StrokeThickness="3"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="640"
            HeightRequest="480">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Character Panel -->
                <ColumnDefinition Width="200"/>   <!-- Stats Panel -->
                <ColumnDefinition Width="240"/>   <!-- Inventory Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Character Equipment -->
            <Border Grid.Column="0" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Equipment Grid -->
                    </Grid.RowDefinitions>

                    <!-- Character Title -->
                    <Label Grid.Row="0" 
                           Text="Equipment" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <!-- Equipment Slots Grid -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>  <!-- Head, Ears -->
                            <RowDefinition Height="35"/>  <!-- Face, Neck -->
                            <RowDefinition Height="35"/>  <!-- Shoulders -->
                            <RowDefinition Height="35"/>  <!-- Arms, Back -->
                            <RowDefinition Height="35"/>  <!-- Chest -->
                            <RowDefinition Height="35"/>  <!-- Wrists -->
                            <RowDefinition Height="35"/>  <!-- Waist -->
                            <RowDefinition Height="35"/>  <!-- Legs -->
                            <RowDefinition Height="35"/>  <!-- Hands, Feet -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Equipment Slots -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="HeadSlot" 
                                   Text="HEAD" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="EarSlot1" 
                                   Text="EAR" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="EarSlot2" 
                                   Text="EAR" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 1: Face and Neck -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="FaceSlot" 
                                   Text="FACE" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="NeckSlot" 
                                   Text="NECK" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 2: Shoulders -->
                        <Border Grid.Row="2" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="ShoulderSlot" 
                                   Text="SHLD" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 3: Arms and Back -->
                        <Border Grid.Row="3" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="ArmsSlot" 
                                   Text="ARMS" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="BackSlot" 
                                   Text="BACK" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 4: Chest -->
                        <Border Grid.Row="4" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="ChestSlot" 
                                   Text="CHEST" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 5: Wrists -->
                        <Border Grid.Row="5" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="WristSlot1" 
                                   Text="WRIST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="5" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="WristSlot2" 
                                   Text="WRIST" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 6: Waist -->
                        <Border Grid.Row="6" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="WaistSlot" 
                                   Text="WAIST" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 7: Legs -->
                        <Border Grid.Row="7" Grid.Column="1" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="LegsSlot" 
                                   Text="LEGS" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Row 8: Hands and Feet -->
                        <Border Grid.Row="8" Grid.Column="0" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="HandsSlot" 
                                   Text="HANDS" 
                                   TextColor="#FFD700"
                                   FontSize="6"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Row="8" Grid.Column="2" 
                                BackgroundColor="#1a1a1a" 
                                Stroke="#666666" 
                                StrokeThickness="1"
                                Margin="1">
                            <Label x:Name="FeetSlot" 
                                   Text="FEET" 
                                   TextColor="#FFD700"
                                   FontSize="7"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Center Panel - Character Stats -->
            <Border Grid.Column="1" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <StackLayout Margin="10">
                    <Label Text="Character Stats" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <!-- File name display -->
                    <Label x:Name="FileNameLabel" 
                           Text="No file loaded" 
                           TextColor="#FFD700"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Margin="0,10"/>
                </StackLayout>
            </Border>

            <!-- Right Panel - Weapons & Items -->
            <Border Grid.Column="2" 
                    BackgroundColor="#333333" 
                    Stroke="#555555" 
                    StrokeThickness="1"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>   <!-- Title -->
                        <RowDefinition Height="*"/>    <!-- Weapon slots -->
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" 
                           Text="Weapons &amp; Items" 
                           TextColor="#FFD700"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <!-- Additional slots omitted for brevity -->
                </Grid>
            </Border>
        </Grid>
    </Border>

    <!-- Menu overlay structure for file operations -->
    <StackLayout x:Name="MainContent" 
                 IsVisible="True" 
                 BackgroundColor="Transparent"
                 HorizontalOptions="Fill" 
                 VerticalOptions="Fill">
        <Button Text="ðŸ“ Open Inventory File" 
                Clicked="OnFileMenuClicked"
                BackgroundColor="#6B4423"
                TextColor="#FFD700"
                FontSize="16"
                FontAttributes="Bold"
                Margin="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
    </StackLayout>

    <!-- File Menu Popup -->
    <StackLayout x:Name="FileMenu" 
                 IsVisible="False"
                 BackgroundColor="#2a2a2a"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Margin="50">
        <Frame BackgroundColor="#333333" 
               BorderColor="#6B4423" 
               Padding="20">
            <StackLayout>
                <Label Text="File Operations" 
                       TextColor="#FFD700" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       Margin="0,0,0,10"/>
                <Button Text="Open File" 
                        Clicked="OnOpenFileClicked"
                        BackgroundColor="#6B4423"
                        TextColor="#FFD700"
                        Margin="5"/>
                <Button Text="Close Menu" 
                        Clicked="OnCloseMenuClicked"
                        BackgroundColor="#666666"
                        TextColor="#FFD700"
                        Margin="5"/>
            </StackLayout>
        </Frame>
    </StackLayout>

    <!-- Inventory View (initially hidden, becomes visible after loading file) -->
    <StackLayout x:Name="InventoryView" IsVisible="False" InputTransparent="False">
        <!-- Main EverQuest-style Inventory Window -->
        <Border BackgroundColor="#2a2a2a" 
                Stroke="#6B4423" 
                StrokeThickness="3"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="640"
                HeightRequest="480">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>   <!-- Character Panel -->
                    <ColumnDefinition Width="200"/>   <!-- Stats Panel -->
                    <ColumnDefinition Width="240"/>   <!-- Inventory Panel -->
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Character Equipment -->
                <Border Grid.Column="0" 
                        BackgroundColor="#333333" 
                        Stroke="#555555" 
                        StrokeThickness="1"
                        Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>   <!-- Title -->
                            <RowDefinition Height="*"/>    <!-- Equipment Grid -->
                        </Grid.RowDefinitions>

                        <!-- Character Title -->
                        <Label Grid.Row="0" 
                               Text="Equipment" 
                               TextColor="#FFD700"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <!-- Equipment Slots Grid -->
                        <Grid Grid.Row="1" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>  <!-- Head, Ears -->
                                <RowDefinition Height="35"/>  <!-- Face, Neck -->
                                <RowDefinition Height="35"/>  <!-- Shoulders -->
                                <RowDefinition Height="35"/>  <!-- Arms, Back -->
                                <RowDefinition Height="35"/>  <!-- Chest -->
                                <RowDefinition Height="35"/>  <!-- Wrists -->
                                <RowDefinition Height="35"/>  <!-- Waist -->
                                <RowDefinition Height="35"/>  <!-- Legs -->
                                <RowDefinition Height="35"/>  <!-- Hands, Feet -->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Equipment Slots -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="HeadSlot" 
                                       Text="HEAD" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="EarSlot1" 
                                       Text="EAR" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="2" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="EarSlot2" 
                                       Text="EAR" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Row 1: Face and Neck -->
                            <Border Grid.Row="1" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="FaceSlot" 
                                       Text="FACE" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="2" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="NeckSlot" 
                                       Text="NECK" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Row 4: Chest -->
                            <Border Grid.Row="4" Grid.Column="1" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="ChestSlot" 
                                       Text="CHEST" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Add other essential slots -->
                            <Border Grid.Row="8" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="HandsSlot" 
                                       Text="HANDS" 
                                       TextColor="#FFD700"
                                       FontSize="6"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="8" Grid.Column="2" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="1">
                                <Label x:Name="FeetSlot" 
                                       Text="FEET" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Center Panel - Character Stats -->
                <Border Grid.Column="1" 
                        BackgroundColor="#333333" 
                        Stroke="#555555" 
                        StrokeThickness="1"
                        Margin="5">
                    <StackLayout Margin="10">
                        <Label Text="Character Stats" 
                               TextColor="#FFD700"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <!-- File name display -->
                        <Label x:Name="FileNameLabel" 
                               Text="No file loaded" 
                               TextColor="#FFD700"
                               FontSize="10"
                               HorizontalOptions="Center"
                               Margin="0,10"/>
                    </StackLayout>
                </Border>

                <!-- Right Panel - Weapons & Items -->
                <Border Grid.Column="2" 
                        BackgroundColor="#333333" 
                        Stroke="#555555" 
                        StrokeThickness="1"
                        Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>   <!-- Title -->
                            <RowDefinition Height="*"/>    <!-- Weapon slots -->
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" 
                               Text="Weapons &amp; Items" 
                               TextColor="#FFD700"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Grid Grid.Row="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Primary/Secondary weapons -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="PrimarySlot" 
                                       Text="PRIMARY" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="SecondarySlot" 
                                       Text="SECONDARY" 
                                       TextColor="#FFD700"
                                       FontSize="7"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Range/Ammo -->
                            <Border Grid.Row="1" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="RangeSlot" 
                                       Text="RANGE" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="1" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="AmmoSlot" 
                                       Text="AMMO" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Rings -->
                            <Border Grid.Row="2" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="RingSlot1" 
                                       Text="RING" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="1" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="RingSlot2" 
                                       Text="RING" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Charm -->
                            <Border Grid.Row="3" Grid.Column="0" 
                                    BackgroundColor="#1a1a1a" 
                                    Stroke="#666666" 
                                    StrokeThickness="1"
                                    Margin="2">
                                <Label x:Name="CharmSlot" 
                                       Text="CHARM" 
                                       TextColor="#FFD700"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </StackLayout>
</ContentPage>