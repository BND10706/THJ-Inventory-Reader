<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="THJ_Inventory_Reader.MainPage"
             Title="THJ Inventory Reader">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10" BackgroundColor="#F0F0F0">
            <Button Text="File" x:Name="FileMenuBtn" Clicked="OnFileMenuClicked" />
        </StackLayout>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" x:Name="MainContent">
            <StackLayout Padding="20" x:Name="WelcomeView">
                <Label 
                    Text="THJ Inventory Reader"
                    FontSize="24"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,20,0,10" />
                <Label 
                    Text="EverQuest Character Inventory Manager"
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="Gray"
                    Margin="0,0,0,30" />
                <Label 
                    Text="Use the File menu to open an inventory file"
                    FontSize="14"
                    HorizontalOptions="Center" />
            </StackLayout>
        </ScrollView>        <!-- Hidden File Menu -->
        <StackLayout x:Name="FileMenu" IsVisible="False" 
                     Grid.Row="1" 
                     BackgroundColor="White" 
                     Margin="10,0,0,0"
                     VerticalOptions="Start"
                     HorizontalOptions="Start">
            <Button Text="Open Inventory File" Clicked="OnOpenFileClicked" />
            <Button Text="Load Default Character" Clicked="OnLoadDefaultClicked" />
            <Button Text="Close" Clicked="OnCloseMenuClicked" />
        </StackLayout><!-- EverQuest Character Sheet Display (Initially Hidden) -->
        <ScrollView Grid.Row="1" x:Name="InventoryView" IsVisible="False">
            <StackLayout Padding="20">
                <Label x:Name="FileNameLabel" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20" />
                
                <!-- EverQuest Authentic Character Sheet Layout -->
                <Grid x:Name="CharacterSheetGrid" 
                      BackgroundColor="#1a1a2e" 
                      HorizontalOptions="Center" 
                      VerticalOptions="Center"
                      WidthRequest="500" 
                      HeightRequest="450"
                      Padding="15">
                    
                    <!-- Background will go here when you provide the image -->
                    <!-- <Image x:Name="CharacterSheetBackground" 
                           Source="inventory_background.png" 
                           Aspect="Fill" 
                           HorizontalOptions="Fill" 
                           VerticalOptions="Fill" /> -->
                    
                    <!-- Equipment slots positioned to match EverQuest layout exactly -->
                    
                    <!-- LEFT SIDE EQUIPMENT (Head to Feet) -->
                    
                    <!-- Head -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,20,0,0">
                        <Label x:Name="HeadSlot" 
                               Text="HEAD" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Neck -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,70,0,0">
                        <Label x:Name="NeckSlot" 
                               Text="NECK" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Shoulders -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,120,0,0">
                        <Label x:Name="ShoulderSlot" 
                               Text="SHLD" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Chest -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,170,0,0">
                        <Label x:Name="ChestSlot" 
                               Text="CHEST" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Waist -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,220,0,0">
                        <Label x:Name="WaistSlot" 
                               Text="WAIST" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Legs -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,270,0,0">
                        <Label x:Name="LegsSlot" 
                               Text="LEGS" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Feet -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="20,320,0,0">
                        <Label x:Name="FeetSlot" 
                               Text="FEET" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- RIGHT SIDE EQUIPMENT -->
                    
                    <!-- Ear 1 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,20,0,0">
                        <Label x:Name="EarSlot1" 
                               Text="EAR" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Ear 2 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,70,0,0">
                        <Label x:Name="EarSlot2" 
                               Text="EAR" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Arms -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,120,0,0">
                        <Label x:Name="ArmsSlot" 
                               Text="ARMS" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Wrist 1 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,170,0,0">
                        <Label x:Name="WristSlot1" 
                               Text="WRIST" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Wrist 2 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,220,0,0">
                        <Label x:Name="WristSlot2" 
                               Text="WRIST" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Hands -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,270,0,0">
                        <Label x:Name="HandsSlot" 
                               Text="HANDS" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Ring 1 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,320,0,0">
                        <Label x:Name="RingSlot1" 
                               Text="RING" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Ring 2 -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="270,370,0,0">
                        <Label x:Name="RingSlot2" 
                               Text="RING" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- BOTTOM WEAPONS AREA -->
                    
                    <!-- Primary Weapon -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="100,370,0,0">
                        <Label x:Name="PrimarySlot" 
                               Text="PRI" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Secondary Weapon -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="150,370,0,0">
                        <Label x:Name="SecondarySlot" 
                               Text="SEC" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Range -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="200,370,0,0">
                        <Label x:Name="RangeSlot" 
                               Text="RNG" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Ammo -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="320,320,0,0">
                        <Label x:Name="AmmoSlot" 
                               Text="AMMO" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Back (positioned behind character area) -->
                    <Border BackgroundColor="#2a2a3e" 
                            Stroke="#555" 
                            StrokeThickness="1"
                            WidthRequest="40" 
                            HeightRequest="40"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="320,270,0,0">
                        <Label x:Name="BackSlot" 
                               Text="BACK" 
                               TextColor="White" 
                               FontSize="8"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Character Model Area (center) -->
                    <Border BackgroundColor="#1a1a2e" 
                            Stroke="#666" 
                            StrokeThickness="2"
                            WidthRequest="120" 
                            HeightRequest="200"
                            HorizontalOptions="Start" 
                            VerticalOptions="Start"
                            Margin="120,120,0,0">
                        <Label Text="CHARACTER&#x0a;MODEL&#x0a;AREA" 
                               TextColor="#888" 
                               FontSize="10"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" 
                               HorizontalTextAlignment="Center" />
                    </Border>
                </Grid>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
